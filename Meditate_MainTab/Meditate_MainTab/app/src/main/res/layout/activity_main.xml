<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainn">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@color/C074A3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEDITATION"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCalm"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/C074A3">

            <TextView
                android:id="@+id/tvCalmTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Guided Calm"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgCalm"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min"
                android:textColor="#CDE7F0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCalmTitle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="A gentle guided moment to calm your thoughts and bring your attention back to the present."
                android:textColor="#E6F2F6"
                app:layout_constraintEnd_toStartOf="@id/imgCalm"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCalmTitle" />

            <ImageView
                android:id="@+id/imgCalm"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:src="@drawable/calmbg"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rectangle"
                android:clipToOutline="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBreak"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardCalm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/C074A3">

            <TextView
                android:id="@+id/tvBreakTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mind Break"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgBreak"/>

            <TextView
                android:id="@+id/tvBreakTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min"
                android:textColor="#CDE7F0"
                app:layout_constraintTop_toBottomOf="@id/tvBreakTitle"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvBreakDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A short mental break to refresh your mind and reduce mental fatigue."
                android:textColor="#E6F2F6"
                app:layout_constraintTop_toBottomOf="@id/tvBreakTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgBreak"/>

            <ImageView
                android:id="@+id/imgBreak"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:src="@drawable/breakbg"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rectangle"
                android:clipToOutline="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLove"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardBreak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/C074A3">

            <TextView
                android:id="@+id/tvLoveTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Self Love"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgLove"/>

            <TextView
                android:id="@+id/tvLoveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min"
                android:textColor="#CDE7F0"
                app:layout_constraintTop_toBottomOf="@id/tvLoveTitle"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvLoveDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A reminder to be kind to yourself and appreciate who you are."
                android:textColor="#E6F2F6"
                app:layout_constraintTop_toBottomOf="@id/tvLoveTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgLove"/>

            <ImageView
                android:id="@+id/imgLove"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:src="@drawable/nnn"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rectangle"
                android:clipToOutline="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardFocus"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/cardLove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/C074A3">

            <TextView
                android:id="@+id/tvFocusTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Focus and Peace"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgFocus"/>

            <TextView
                android:id="@+id/tvFocusTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 min"
                android:textColor="#CDE7F0"
                app:layout_constraintTop_toBottomOf="@id/tvFocusTitle"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvFocusDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A peaceful space designed to help you focus without pressure."
                android:textColor="#E6F2F6"
                app:layout_constraintTop_toBottomOf="@id/tvFocusTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imgFocus"/>

            <ImageView
                android:id="@+id/imgFocus"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:src="@drawable/ffff"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rectangle"
                android:clipToOutline="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
