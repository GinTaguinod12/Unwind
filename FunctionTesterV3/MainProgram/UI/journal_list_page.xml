<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@drawable/bg3"
    tools:context=".Activities.Journal.JournalListPage">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="start">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:padding="8dp"
                android:src="@drawable/backbtn" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="serif"
                android:text="My Journal"
                android:textColor="#393B43"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_above="@+id/tvSubtitle"
                android:layout_marginStart="30dp" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="here are your moments saved"
                android:textColor="#546E7A"
                android:textSize="16sp"
                android:textStyle="italic"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="30dp"/>
        </RelativeLayout>
    </LinearLayout>

    <!--Recycler View & FAB -->
    <LinearLayout
        android:layout_width="440dp"
        android:layout_height="740dp"
        android:orientation="horizontal"
        android:gravity="start">

        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvJournalEntries"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                tools:listitem="@layout/journal_card_view" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddEntry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabCustomSize="70dp"
                app:maxImageSize="25dp"
                app:elevation="6dp"
                app:backgroundTint="#FFF6A6"
                app:srcCompat="@drawable/addbtn"
                app:tint="#5D4037"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="15dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
